{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main class="page page--background">
    <header>
        {{>back-button}}
    </header>
    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>
        <div class="form">
            {{>field
            action="signupForm.change"
            label="Електронна адреса"
            name="email"
            placeholder="Ваш email"
            isEmail=true
            }}

            {{>field
            action="signupForm.change"
            label="Пароль"
            name="password"
            placeholder="Ваш пароль"
            isPassword=true
            }}

            {{>field
            action="signupForm.change"
            label="Повторіть пароль"
            name="password2"
            placeholder="Ваш пароль"
            isPassword=true
            }}

            {{>field
            action="signupForm.change"
            label="Роль на сайті"
            placeholder="Оберіть роль"
            name="isConfirm"
            list=data.role
            isSelect=true
            }}

            {{>field
            action="signupForm.change"
            label="Погоджуєтесь з умовами"
            name="isConfirm"
            isCheckbox=true
            }}

        </div>
        </div>
        {{>button text="Зареєструватись" submit="signupForm.submit()"}}
        <span class="alert alert--error">ERROR</span>
    </form>
</main>

